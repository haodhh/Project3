@model Project3.Data.Database.Student

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/StudentHD/Views/Shared/layout.cshtml";
    var gender = "hihi";
}
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Thông tin Cá nhân</b>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <center><img src="~/Contents/sanji.jpg" width="90%" /></center>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <h3><b>Thông tin Cá nhân</b></h3>
                        <table border="0">
                            <tr>
                                <td><h4>Họ và Tên:</h4></td>
                                <td> <h4>@Model.Name</h4></td>
                            </tr>
                            <tr>
                                <td><h4>Tuổi:</h4></td>
                                <td> <h4>@Model.Age</h4></td>
                            </tr>
                            <tr>
                                <td><h4>Giới tính:</h4></td>
                                <td>
                                    <h4>
                                        @if (Model.Gender == 0)
                                        {
                                            gender = "Nam";
                                            @gender
                                        }
                                        else if (Model.Gender == 1)
                                        {
                                            gender = "Nữ";
                                            @gender
                                        }
                                        else
                                        {
                                            gender = "Nooo";
                                            @gender
                                        }
                                    </h4>
                                </td>
                            </tr>
                            <tr>
                                <td><h4>Số điện thoại:</h4></td>
                                <td> <h4>@Model.Phone</h4></td>
                            </tr>
                            <tr>
                                <td><h4>Email:</h4></td>
                                <td> <h4>@Model.Email</h4></td>
                            </tr>
                            <tr>
                                <td><h4>Địa chỉ:</h4></td>
                                <td> <h4>@Model.Address</h4></td>
                            </tr>
                        </table>
                        <br />
                        <br />

                        <table width="100%">
                            <tr>
                                <td><h3><b>Thay đổi mật khẩu</b></h3></td>
                                <td style="color:red;">@Html.ValidationMessage("error")</td>
                            </tr>
                            <tr>
                                <td width="40%"><h4>Mật khẩu cũ</h4></td>
                                <td><input type="password" id="oldPass" class="form-control"></td>
                            </tr>
                            <tr>
                                <td><h4>Mật khẩu mới</h4></td>
                                <td><input type="password" id="newPass1" class="form-control"></td>
                            </tr>
                            <tr>
                                <td><h4>Nhập lại mật khẩu mới</h4></td>
                                <td><input type="password" id="newPass2" class="form-control"></td>
                            </tr>
                        </table>
                        <button onclick="changePass()" type="button" class="btn btn-primary">Thay đổi</button>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script>
    function changePass() {
        var p1 = document.getElementById("oldPass").value;
        var p2 = document.getElementById("newPass1").value;
        var p3 = document.getElementById("newPass2").value;
        var href = "/StudentHD/Home/ChangePass?p1=" + p1 + "&p2=" + p2 + "&p3=" + p3;
        location.href = href;
    }
</script>