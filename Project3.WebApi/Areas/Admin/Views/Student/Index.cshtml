@model IEnumerable<Project3.Data.Database.Student>

@{
    ViewBag.Title = "Quản lý Học viên";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
    var n = 0;

}
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý Học viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Họ Tên</th>
                                <th>Tuổi</th>
                                <th>Giới tính</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Mã Học viên</th>
                                <th style="color:red">@Html.ValidationMessage("error")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b>0</b></td>
                                <td><input id="addName" class="form-control"></td>
                                <td><input id="addAge" class="form-control"></td>
                                <td width="95px">
                                    <select class="form-control" id="addGender">
                                        <option value="0" selected="selected">Nam</option>
                                        <option value="1">Nữ</option>
                                        <option value="2">Noo</option>
                                    </select>
                                </td>
                                <td><input id="addPhone" class="form-control"></td>
                                <td><input id="addEmail" class="form-control"></td>
                                <td><input id="addAddress" class="form-control"></td>
                                <td><input id="addUser" class="form-control"></td>
                                <td><center><button onclick="addFunction()" type="button" class="btn btn-primary">Create</button></center></td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                n++;
                                <tr>
                                    <td><b>@n</b></td>
                                    <td>
                                        <div id="20+@item.ID">@item.Name</div>
                                        <div id="21+@item.ID" style="display:none;"><input id="22+@item.ID" class="form-control" value="@item.Name"></div>
                                    </td>
                                    <td>
                                        <div id="30+@item.ID">@item.Age</div>
                                        <div id="31+@item.ID" style="display:none;"><input id="32+@item.ID" class="form-control" value="@item.Age"></div>
                                    </td>
                                    <td>
                                        <div id="40+@item.ID">
                                            @{
                                                if (item.Gender == 0)
                                                {
                                                    <p>Nam</p>
                                                }
                                                else if (item.Gender == 1)
                                                {
                                                    <p>Nữ</p>
                                                }
                                                else
                                                {
                                                    <p>Noo</p>
                                                }
                                            }
                                        </div>
                                        <div id="41+@item.ID" style="display:none;">
                                            <select class="form-control" id="42+@item.ID">
                                                <option value="0" selected="selected">Nam</option>
                                                <option value="1">Nữ</option>
                                                <option value="2">Noo</option>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div id="50+@item.ID">@item.Phone</div>
                                        <div id="51+@item.ID" style="display:none;"><input id="52+@item.ID" class="form-control" value="@item.Phone"></div>
                                    </td>
                                    <td>
                                        <div id="60+@item.ID">@item.Email</div>
                                        <div id="61+@item.ID" style="display:none;"><input id="62+@item.ID" class="form-control" value="@item.Email"></div>
                                    </td>
                                    <td>
                                        <div id="70+@item.ID">@item.Address</div>
                                        <div id="71+@item.ID" style="display:none;"><input id="72+@item.ID" class="form-control" value="@item.Address"></div>
                                    </td>
                                    <td>
                                        <div id="80+@item.ID">@item.User</div>
                                    </td>
                                    <td width="119px">
                                        <div id="00+@item.ID">
                                            <button onclick="editFunction(@item.ID)" type="button" class="btn btn-primary">Edit</button>&nbsp;<button onclick="delFunction(@item.ID)" type="button" class="btn btn-primary">Del</button>
                                        </div>
                                        <div id="01+@item.ID" style="display:none;">
                                            <button onclick="okeditFunction(@item.ID)" type="button" class="btn btn-primary">OK</button>&nbsp;<button onclick="cancelFunction(@item.ID)" type="button" class="btn btn-primary">Hủy</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script>

    function addFunction() {
        var addName = document.getElementById("addName").value;
        var addAge = document.getElementById("addAge").value;
        var e = document.getElementById("addGender");
        var addGender = e.options[e.selectedIndex].value;
        var addPhone = document.getElementById("addPhone").value;
        var addEmail = document.getElementById("addEmail").value;
        var addAddress = document.getElementById("addAddress").value;
        var addUser = document.getElementById("addUser").value;
        var hrefCreat = "/Admin/Student/Create?name=" + addName + "&age=" + addAge + "&gender=" + addGender + "&phone=" + addPhone + "&email=" + addEmail + "&address=" + addAddress + "&user=" + addUser;
        location.href = hrefCreat;
    }

    function editFunction(itemID) {
        document.getElementById("20+" + itemID).style.display = 'none';
        document.getElementById("21+" + itemID).style.display = 'block';
        document.getElementById("30+" + itemID).style.display = 'none';
        document.getElementById("31+" + itemID).style.display = 'block';
        document.getElementById("40+" + itemID).style.display = 'none';
        document.getElementById("41+" + itemID).style.display = 'block';
        document.getElementById("50+" + itemID).style.display = 'none';
        document.getElementById("51+" + itemID).style.display = 'block';
        document.getElementById("60+" + itemID).style.display = 'none';
        document.getElementById("61+" + itemID).style.display = 'block';
        document.getElementById("70+" + itemID).style.display = 'none';
        document.getElementById("71+" + itemID).style.display = 'block';
        document.getElementById("00+" + itemID).style.display = 'none';
        document.getElementById("01+" + itemID).style.display = 'block';
    }

    function okeditFunction(itemID) {
        var editName = document.getElementById("22+" + itemID).value;
        var editAge = document.getElementById("32+" + itemID).value;
        var e = document.getElementById("42+" + itemID);
        var editGender = e.options[e.selectedIndex].value;
        var editPhone = document.getElementById("52+" + itemID).value;
        var editEmail = document.getElementById("62+" + itemID).value;
        var editAddress = document.getElementById("72+" + itemID).value;
        var hrefEdit = "/Admin/Student/Edit?id=" + itemID + "&name=" + editName + "&age=" + editAge + "&gender=" + editGender + "&phone=" + editPhone + "&email=" + editEmail + "&address=" + editAddress;
        location.href = hrefEdit;
    }

    function cancelFunction(itemID) {
        document.getElementById("20+" + itemID).style.display = 'block';
        document.getElementById("21+" + itemID).style.display = 'none';
        document.getElementById("30+" + itemID).style.display = 'block';
        document.getElementById("31+" + itemID).style.display = 'none';
        document.getElementById("40+" + itemID).style.display = 'block';
        document.getElementById("41+" + itemID).style.display = 'none';
        document.getElementById("50+" + itemID).style.display = 'block';
        document.getElementById("51+" + itemID).style.display = 'none';
        document.getElementById("60+" + itemID).style.display = 'block';
        document.getElementById("61+" + itemID).style.display = 'none';
        document.getElementById("70+" + itemID).style.display = 'block';
        document.getElementById("71+" + itemID).style.display = 'none';
        document.getElementById("00+" + itemID).style.display = 'block';
        document.getElementById("01+" + itemID).style.display = 'none';
    }

    function delFunction(itemID) {
        if (confirm("Xóa bản ghi!")) {
            var hrefDel = "/Admin/Student/Delete?id=" + itemID;
            location.href = hrefDel;
        }
    }
    
</script>